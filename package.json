{
  "name": "@srnd/gql-server",
  "version": "0.1.0",
  "description": "GraphQL interface to SRND services.",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "postbuild": "copyfiles -u 1 \"src/**/*.gql\" dist",
    "start": "node ./dist/index.js",
    "dev-old": "nodemon --exec ts-node ./src/index.ts --project ./tsconfig.json",
    "dev": "nodemon --exec tsx src/index.ts",
    "codegen": "graphql-codegen --config codegen.ts",
    "codegen-watch": "graphql-codegen --watch 'src/**/*.ts --config codegen.ts",
    "watch": "concurrently --names \"CodeGen,TS,Nodemon\" -c \"bgYellow,bgBlue,bgMagenta\" \"yarn graphql-codegen --watch 'src/**/*.ts'\"  \"yarn tsc -w \" \"yarn nodemon ./dist/index.js \""
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/SRND/gql-server.git"
  },
  "keywords": [
    "srnd"
  ],
  "author": "Tyler Menezes",
  "license": "Artistic-2.0",
  "bugs": {
    "url": "https://github.com/SRND/Topo/issues"
  },
  "homepage": "https://github.com/SRND/Topo#readme",
  "dependencies": {
    "@apollo/server": "^4.5.0",
    "@graphql-tools/batch-delegate": "^8.4.22",
    "@graphql-tools/delegate": "^9.0.28",
    "@graphql-tools/executor-graphql-ws": "^0.0.12",
    "@graphql-tools/executor-http": "^0.1.9",
    "@graphql-tools/graphql-file-loader": "^7.5.16",
    "@graphql-tools/load": "^7.8.13",
    "@graphql-tools/merge": "^8.4.0",
    "@graphql-tools/schema": "^9.0.17",
    "@graphql-tools/stitch": "^8.7.44",
    "@graphql-tools/utils": "^9.2.1",
    "@graphql-tools/wrap": "^9.3.8",
    "@maxmind/geoip2-node": "^3.5.0",
    "@types/node-fetch": "^2.6.3",
    "apollo-transform-utils": "^0.0.3",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "graphql": "^16.6.0",
    "graphql-scalars": "^1.21.3",
    "graphql-subscriptions": "^2.0.0",
    "graphql-upload": "^16.0.2",
    "graphql-ws": "^5.12.0",
    "lru-cache": "^8.0.4",
    "node-fetch": "^3.3.1",
    "subscriptions-transport-ws": "^0.11.0",
    "ws": "^8.13.0",
    "yarn": "^1.22.19"
  },
  "devDependencies": {
    "@codeday/eslint-config": "^3.0.1",
    "@graphql-codegen/cli": "3.2.2",
    "@graphql-codegen/typescript": "3.0.2",
    "@graphql-codegen/typescript-resolvers": "3.1.1",
    "@types/cors": "^2.8.13",
    "@types/node": "^18.15.11",
    "concurrently": "^8.0.1",
    "copyfiles": "^2.4.1",
    "dotenv-cli": "^7.1.0",
    "eslint": "^8.37.0",
    "eslint-plugin-require-extensions": "^0.1.3",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.7",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.7.1",
    "typescript": "^5.0.3"
  },
  "prettier": "@codeday/prettier-config"
}
